{% extends 'templates/app.twig' %}
{% block content %}
<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="panel panel-default">
<div class="panel-heading">Reset Password</div>
<div class="panel-body">
<form action="{{ path_for('auth.reset') }}" method="post">
<div class="form-group{{ errors.email ? ' has-error' : '' }}">
<label for="email">Email</label>
<input type="email" name="email" id="email" placeholder="Please enter your email address" class="form-control" value="{{ old.email }}">
{% if errors.email %}
<span class="help-block">{{ errors.email | first }}</span>
{% endif %}
</div>
{{ csrf.field | raw }}
<button type="submit" class="btn btn-default">Reset Password</button>
</form>
</div>
</div>
</div>
</div>
{% endblock %}
