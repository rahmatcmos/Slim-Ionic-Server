{% extends 'templates/app.twig' %}
{% block content %}
<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="panel panel-default">
<div class="panel-heading">Recover Account</div>
<div class="panel-body">
<form action="{{ path_for('auth.recover') }}?token={{ token.id }}" method="post">
<input type="hidden" name="user" id="user" value="{{ token.user }}">
<div class="form-group{{ errors.password ? ' has-error' : '' }}">
<label for="password_old">New Password</label>
<input type="password" name="password" id="password" class="form-control">
{% if errors.password %}
<span class="help-block">{{ errors.password | first }}</span>
{% endif %}
</div>
<div class="form-group{{ errors.confirm_password ? ' has-error' : '' }}">
<label for="password">Confirm Password</label>
<input type="password" name="confirm_password" id="confirm_password" class="form-control">
{% if errors.confirm_password %}
<span class="help-block">{{ errors.confirm_password | first }}</span>
{% endif %}
</div>
{{ csrf.field | raw }}
<button type="submit" class="btn btn-default">Recover Account</button>
</form>
</div>
</div>
</div>
</div>
{% endblock %}
